<Window x:Class="LawyerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ЮрДок" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl>
            <TabItem Header="Дела">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <TextBox x:Name="SearchCaseBox" Width="200" Margin="5"/>
                        <Button Content="Поиск" Click="SearchCases_Click" Margin="5"/>
                        <Button Content="Добавить дело" Click="AddCase_Click" Margin="5"/>
                    </StackPanel>

                    <DataGrid x:Name="CasesGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Номер дела" Binding="{Binding CaseNumber}" Width="120"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Дата заседания" Binding="{Binding CourtDate, StringFormat=dd.MM.yyyy}" Width="120"/>
                            <DataGridTextColumn Header="Клиент" Binding="{Binding Client.FullName}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <TextBlock Text="Описание:" FontWeight="Bold"/>
                        <TextBlock x:Name="CaseDescriptionText" Text="{Binding SelectedItem.Description, ElementName=CasesGrid}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Клиенты">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Content="Добавить клиента" Click="AddClient_Click" HorizontalAlignment="Left" Margin="5"/>

                    <DataGrid x:Name="ClientsGrid" Grid.Row="1" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="200"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="120"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Документы">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <ComboBox x:Name="CaseDocumentsCombo" Width="200" Margin="5"
                                  DisplayMemberPath="CaseNumber"/>
                        <Button Content="Загрузить документ" Click="UploadDocument_Click" Margin="5"/>
                    </StackPanel>

                    <DataGrid x:Name="DocumentsGrid" Grid.Row="1" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="200"/>
                            <DataGridTextColumn Header="Тип" Binding="{Binding DocType}" Width="100"/>
                            <DataGridHyperlinkColumn Header="Файл" Width="150">
                                <DataGridHyperlinkColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                        <Setter Property="Foreground" Value="Blue"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <EventSetter Event="MouseDown" Handler="OpenDocument_Click"/>
                                    </Style>
                                </DataGridHyperlinkColumn.ElementStyle>
                            </DataGridHyperlinkColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>