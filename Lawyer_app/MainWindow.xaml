<Window x:Class="Lawyer_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="Юридическое приложение" Height="450" Width="800">
    <Grid>
        <ListView x:Name="TasksListView" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding TaskId}" Width="50"/>
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Title}" Width="200"/>
                    <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding Description}" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>